{% trans_default_domain 'media' %}

{{ form_start(form, {'class': 'uk-form-stacked'}) }}
    <div class="uk-margin-medium-bottom">
        {{ form_label(form.name, 'media.folder.form.name'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'md-input'}}) }}
    </div>
    <div class="uk-margin-medium-bottom">
        {{ form_label(form.tag, 'media.folder.form.tag'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.tag, {'attr': {'class': 'md-input'}}) }}
    </div>
    <div class="uk-margin-medium-bottom">
        {{ form_label(form.allowedExtensions, 'media.folder.form.allowed_extensions'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.allowedExtensions, {'id': 'filter', 'attr': {'class': 'md-input'}}) }}
    </div>
    <div class="uk-modal-footer uk-text-right">
        <button type="button" class="md-btn md-btn-flat uk-modal-close">{{ 'media.folder.form.cancel'|trans }}</button>
        <button type="submit" class="md-btn md-btn-success">{{ folder is defined ? 'media.folder.form.update'|trans : 'media.folder.form.create'|trans }}</button>
    </div>
{{ form_end(form) }}
