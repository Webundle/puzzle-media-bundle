{% trans_default_domain 'media' %}
    
<div class="md-card uk-margin-bottom" id="local-{{ type }}">
    <div class="md-card-toolbar">
        <div class="md-card-toolbar-actions">
            <a id="btn_add_{{ type }}" data-uk-tooltip="{pos:'bottom'}" title="{{ 'media.file.embed.add'|trans }}" alt="{{ 'media.file.embed.add'|trans }}" data-context="{{ context is defined ? context : 'media'}}" data-multiple="{{ multiple is defined ? true : false}}" data-type="{{ type }}" class="choose_files_btn">
                <i class="md-icon material-icons">&#xE146;</i>
            </a>
        </div>
        <h3 class="md-card-toolbar-heading-text">
            {{ form_label(formData) }}
        </h3>
    </div>
    <div class="md-card-content uk-text-center {% if data is empty or multiple == true %}uk-hidden{% endif %}" id="target_container_{{ type }}">
        {# {% if data is not empty %}
            {% set end = multiple == false ? data|split(',') : data %}
            {% for item in data %}
                {% set file = puzzle_media_file(item) %}
                {% if file is not empty %}
                    {% if file.picture is not empty %}
                        <img src="{{ file.path }}" id="item_{{ file.id }}"> 
                    {% elseif file.audio is not empty %}
                        <audio src="{{ file.path }}" controls id="item_{{ file.id }}" style="width:100%"></audio>
                    {% elseif file.video is not empty %}
                        <video src="{{ file.path }}" style="width:100%" controls id="item_{{ file.id }}"></video>
                    {% else %}
                        <embed src="{{ file.path }}" width="100%" controls id="item_{{ file.id }}" /></embed>
                    {% endif %}
                {% endif %}
            {% endfor %} #}
        	
        	{# <embed src="{{ file != null ? file.path : "" }}" class="img_large" id="target_{{ type }}" alt="{{ file.name }}"></embed>
        {# {% else %}
        	<embed src="" class="img_large" id="target_{{ type }}"></embed> #}
        {# {% endif %}  #}
        <div class="uk-hidden" id="item_count_container_{{ type }}">
            <span id="item_count_{{ type }}"></span> {{ 'media.file.embed.selected'|trans }}
        </div>
    </div>
    {{ form_widget(formData, {'id': 'files_to_add_'~type}) }}
</div>
{% if alternate is defined and alternate == true %}
<div class="md-card alternate-{{ type }} uk-hidden">
    <div class="md-card-toolbar">
        <h3 class="md-card-toolbar-heading-text">
            <label class="uk-form-label">{{ 'media.file.embed.url'|trans }}</label>
        </h3>
    </div>
    <div class="md-card-content">
        <div class="uk-form-row">
            {{ form_label(formData) }}
            <input class="md-input" id="path" name="{{ type }}"/>
        </div>
    </div>
</div>

<div class="uk-text-right">
    <a href="#" id="{{ type }}" class="toggle-source">{{ 'media.file.embed.toggle_source'|trans }}</a>
    <input id="source-{{ type }}" name="source" value="local" type="hidden"/>
</div>
{% endif %}
<div class="uk-modal" id="choose_files_modal_{{ type }}">
    <div class="uk-modal-dialog uk-modal-dialog-large" id="choose_files_modal_dialog_{{ type }}">
        <button type="button" class="uk-modal-close uk-close"></button>
        <div class="uk-margin-medium-bottom">
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-1">
                    <ul class="uk-tab" data-uk-tab="{connect:'#tabs_1_{{ type }}'}">
                        <li class="uk-active"><a href="#">{{ 'media.file.embed.from_computer'|trans }}</a></li>
                        <li><a href="#" class="load_media" data-type="{{ type }}">{{ 'media.file.embed.from_media'|trans }}</a></li>
                    </ul>
                    
                    <ul id="tabs_1_{{ type }}" class="uk-switcher uk-margin">
                        <li id="fromLocal_{{ type }}">
                            <div class="uk-width-large-1-1">
                                <div id="file_upload_drop_{{ type }}" class="uk-file-upload">
                                    <p class="uk-text">{{ 'media.file.embed.drag_and_drop'|trans|upper }}</p>
                                    <p class="uk-text-muted uk-text-small uk-margin-small-bottom">{{ 'media.file.embed.or'|trans|upper }}</p>
                                    <a class="uk-form-file md-btn md-btn-flat md-btn-flat-primary" id="file_upload_label">{{ 'media.file.embed.choose'|trans|upper }}<input id="file_upload_select_{{ type }}" type="file" {% if multiple == 1 %}multiple{% endif %} accept="{{ accept }}"></a>
                                    <input type="hidden" id="enable_mutiple_select_{{ type }}" value="{{ multiple|default(false) }}">
                                    <input type="hidden" id="file_filters_{{ type }}" value="{{ filters }}">
                                    <input type="hidden" id="file_upload_context_{{ type }}" value="{{ context }}">
                                    <input type="hidden" id="file_type" value="{{ type }}">
                                </div>
                                <div id="file_upload_progressbar_{{ type }}" class="uk-progress uk-hidden">
                                    <div class="uk-progress-bar" style="width:0" id="progress_bar_{{ type }}">0%</div>
                                </div>
                            </div>
                        </li>
                        <li id="fromMedia_{{ type }}"></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

